.form-group
  - if controller_name != 'sessions'
    = link_to 'Login', new_user_session_path(resource_name), class: "btn btn-outline-primary btn-lg"
    %br/
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t(".sign_up"), new_registration_path(resource_name), class: 'btn btn-lg btn-outline-primary mt-2'
    %br/
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to t(".forgot_your_password"), new_password_path(resource_name), class: 'btn btn-lg btn-outline-primary mt-2'
    %br/
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name), class: 'mt-2'
