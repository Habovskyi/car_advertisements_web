%body.text-center
  %main
    %h3.fw-light.search_title Sign up
    .row.g-2.col-5.col-form-label-lg.form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = bootstrap_devise_error_messages!
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control border border-primary border-2 rounded-3', placeholder: "Email"
        .form-group.mt-2
          = f.password_field :password, autocomplete: 'current-password', class: 'form-control border border-primary border-2 rounded-3', placeholder: "Password"
          - if @minimum_password_length
            %small.form-text.text-muted= t('devise.shared.minimum_password_length', count: @minimum_password_length)
        .form-group.mt-2
          = f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control border border-primary border-2 rounded-3', placeholder: "Password confirmation"
        .form-group.mt-4
          = f.submit t('.sign_up'), class: 'btn btn-lg btn-outline-primary'
      = render 'devise/shared/links'
