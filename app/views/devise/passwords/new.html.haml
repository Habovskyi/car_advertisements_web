%body.text-center
  %main
    %h3.fw-light.search_title Forgot your password?
    .row.g-2.col-5.col-form-label-lg.form
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = bootstrap_devise_error_messages!
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: "Email"
        .form-group
          = f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-lg btn-outline-primary mt-2'
      = render 'devise/shared/links'
