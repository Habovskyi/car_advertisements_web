.container
  %h3.fw-light.text-center Please enter search rules
  = form_with url: searches_path, method: :post do |form|
    .row.justify-content-md-center
      .mt-3
      .col-md-auto
        = form.text_field :make, class: "border border-primary border-3 rounded-3 area", placeholder: "Make"
      .col-md-auto
        = form.text_field :model, class: "border border-primary border-3 rounded-3 area", placeholder: "Model"
    .row.justify-content-md-center
      .mt-3
      .col-md-auto
        = form.number_field :year_from, class: "border border-primary border-3 rounded-3 area", placeholder: "Year from"
      .col-md-auto
        = form.number_field :year_to, class: "border border-primary border-3 rounded-3 area", placeholder: "Year to"
    .row.justify-content-md-center
      .mt-3
      .col-md-auto
        = form.number_field :price_from, class: "border border-primary border-3 rounded-3 area", placeholder: "Price from"
      .col-md-auto
        = form.number_field :price_to, class: "border border-primary border-3 rounded-3 area", placeholder: "Price to"
      %div.text-center
        = form.submit "Search", class: "btn btn-outline-primary btn-lg search_form"

